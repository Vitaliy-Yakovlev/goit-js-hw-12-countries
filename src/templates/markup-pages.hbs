{{#each this}}
<h2 class="title-country">{{name.official}}</h2>
<div class="js-country-container">
    <div class="container-country">
        <p class="container-text-country">Capital: <span class="text-country">{{capital}}</span></p>
        <p class="container-text-country">Population: <span class="text-country"> {{population}}</span></p>
        <p class="container-text-country">Language:</p>
        <ul>
            {{#each languages}}
            <li class="text-country">{{this}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="flag-country">
        <img width="600" height="240" class="flag" src="{{flags.svg}}" alt="flag" >
    </div>
</div>
{{/each}}